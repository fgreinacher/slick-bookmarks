{
  "manifest_version": 2,

  "name": "Slick Bookmarks",
  "description": "Lets you browse your bookmarks in a pop up window. Nothing more.",
  "version": "1.0",

  "permissions": [
    "bookmarks", 
    "tabs",
    "chrome://favicon/",
    "storage"
  ],
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  
  "browser_action": {
    "default_title": "Slick Bookmarks",  
    "default_icon": "icon.png",
    "default_popup": "index.html"
  }
}
{
  "manifest_version": 2,

  "name": "Slick Bookmarks",
  "description": "Allows you to easily browse your bookmarks.",
  "version": "1.0",

  "permissions": [
    "bookmarks", 
    "tabs",
    "chrome://favicon/",
    "storage"
  ],
  
  "browser_action": {
    "default_title": "Slick Bookmarks",  
    "default_icon": "icon.png",
    "default_popup": "index.html"
  }
}
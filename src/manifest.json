{

  "name": "Slick Bookmarks",
  "description": "Bookmark discovery, supercharged.",
  "author": "Florian Greinacher",
  "homepage_url": "https://github.com/floriangreinacher/Slick-Bookmarks",

  "manifest_version": 2,
  "version": "1.2",

  "permissions": [
    "bookmarks",
    "tabs",
    "chrome://favicon/"
  ],

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {
    "default_title": "Slick Bookmarks",
    "default_icon": "images/icon24.png",
    "default_popup": "index.html"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Ctrl+B"
      }
    }
  }

}
